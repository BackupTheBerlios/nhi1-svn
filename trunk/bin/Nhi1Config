#!/bin/bash
#+
#:  \file       bin/Nhi1Config
#:  \brief      \$Id$
#:  
#:  (C) 2013 - NHI - #1 - Project - Group
#:  
#:  \version    \$Rev$
#:  \author     EMail: aotto1968 at users.berlios.de
#:  \attention  this software has GPL permissions to copy
#:              please contact AUTHORS for additional information
#:

set -ue

## =======================================================================
##
## Setup Environment 
##
##   performance ...
##
## =======================================================================

Usage() {
  exec $NHI1_HOME/configure --help
}

##
## =======================================================================
##

export PATH=/bin:/usr/bin
export LD_LIBRARY_PATH=

NHI1_HOME=$(dirname $(dirname $(readlink -f $0)))

##  Retrieve environment data
declare -A with
declare -A enable
declare -a opt

eval "$($NHI1_HOME/sbin/SetupEnv $0 "$@" <<-'EOF'
G_Shell 'bash'
# ---------------------------------------------------------------------
G_Date='$Date$'
G_Revision='$Revision$'
G_Author='$Author: aotto1968 $'
G_Source='$URL: svn+ssh://svn.berlios.de/svnroot/repos/nhi1/trunk/bin/Nhi1Config $'
# --------------------------------------------------------------------
G_Description='wrapper to setup the build-environment for the "nhi1-configure" script.'
G_HelpProc='Usage'
# -------------------------------------------------------------------
G_Option local-data-file default
G_Argument 'use-perf:Perf:0:use performance code:B'
G_Argument 'use-threads:Thread:0:use thread code:B'
for l in cache brain guard ; do
  G_Argument "$l:enable[$l]:disable:add '$l' feature support:D:enable:disable"
done
for l in cxx tcl perl python php ruby java csharp vb go ; do
  G_Argument "$l:with[$l]:without:add '$l' language support:DV:with:without"
done
#[[ "$OSTYPE" == 'cygwin' ]] && G_Argument 'win:win::cross-compiler:L:x86_64-w64-mingw32:i686-w64-mingw32'
EOF
  )"

# disable because "configure" compiler test crash then calkled from script :-(
#[[ -n "$win" ]] && {
#  opt+=--host=$win
#  [[ -z "${CC:-}"  ]] && export CC="ccache $win-gcc"
#  [[ -z "${CXX:-}" ]] && export CXX="ccache $win-g++"
#}

for l in "${!with[@]}" ; do
  opt+=("--with-$l=${with[$l]}")
done

for l in "${!enable[@]}" ; do
  opt+=("--enable-$l=${enable[$l]}")
done

if [[ $Perf == 'yes' ]] ; then
  opt+=(--enable-static)
  if [[ $Thread == 'yes' ]] ; then
    opt+=(--enable-threads)
  fi
else
  if [[ $Thread == 'yes' ]] ; then
    opt+=(--enable-threads --enable-symbols)
  else
    opt+=(--enable-symbols)
  fi
fi

[[ "${with[go]}" == "1" && -f /etc/profile.d/go.sh ]] && {
  source /etc/profile.d/go.sh
}
[[ "${with[java]}" == "1" && -f /etc/profile.d/alljava.sh ]] && {
  source /etc/profile.d/alljava.sh
}

rm -fr /tmp/libmsgque-install

set -x
exec bash -norc $NHI1_HOME/configure "${opt[@]}" ${@:-}

