abs_top_builddir='@abs_top_builddir@'
abs_top_srcdir='@abs_top_srcdir@'
ostype=${OSTYPE:-unknow}

TL="$abs_top_builddir/theLink"
TB="$abs_top_builddir/theBrain"
TG="$abs_top_builddir/theGuard"

if test "$ostype" == "cygwin"; then
  nTL=$(cygpath -m "$TL")
  nTB=$(cygpath -m "$TB")
  nTG=$(cygpath -m "$TG")
else
  nTL="$TL"
  nTB="$TB"
  nTG="$TG"
fi

export PATH=".:$TL/tests:$TL/example/c:$TL/example/cc:$TL/acmds:$TB/abrain:$TB/atrans:$TG/aguard:$TL/csmsgque:@path@"
export LD_LIBRARY_PATH="$TL/libmsgque/.libs:$TL/tclmsgque/.libs:$TL/pymsgque/.libs:$TL/perlmsgque/.libs:$TL/javamsgque/.libs:$TL/ccmsgque/.libs:$TL/perlmsgque/Net-PerlMsgque/blib/arch/auto/Net/PerlMsgque:@ld_library_path@"
export TCLLIBPATH="$nTL/tclmsgque/.libs"
export PYTHONPATH="$nTL/pymsgque/.libs"
export RUBYLIB="$nTL/rubymsgque/.libs"
export CLASSPATH=".:$nTL/javamsgque/javamsgque.jar:$nTL/example/java"
export MONO_PATH=".:$nTL/csmsgque:$nTL/example/csharp"
export PERL5LIB="$nTL/perlmsgque/Net-PerlMsgque/blib/lib:$nTL/example/perl"
export PKG_CONFIG_PATH="@NHI1_TOOL_ROOT@/lib/pkgconfig:${PKG_CONFIG_PATH:-}"

PACKAGE='@PACKAGE@' 
PACKAGE_VERSION='@PACKAGE_VERSION@' 
LIBMSGQUE_VERSION='@LIBMSGQUE_VERSION@'
host='@host@' 
build='@build@' 
PERL='@PERL@' 
PHP='@PHP@'
DOT='@DOT@'
DOXYGEN='@DOXYGEN@'
PYTHON='@PYTHON@'
RUBY='@RUBY@'
JAVA='@JAVA@'
TCLSH='@TCLSH@'
CLREXEC='@CLREXEC@'
PATH_SEP='@PATH_SEP@'
EXEEXT='@EXEEXT@'

USE_TCL='@USE_TCL@'
USE_PERL='@USE_PERL@'
USE_PHP='@USE_PHP@'
USE_CSHARP='@USE_CSHARP@'
USE_GO='@USE_GO@'
USE_VB='@USE_VB@'
USE_PYTHON='@USE_PYTHON@'
USE_RUBY='@USE_RUBY@'
USE_JAVA='@USE_JAVA@'
USE_CXX='@USE_CXX@'
USE_PHP='@USE_PHP@'
USE_BRAIN='@USE_BRAIN@'
USE_GUARD='@USE_GUARD@'

export PACKAGE PACKAGE_VERSION host build PERL DOT \
	DOXYGEN PYTHON RUBY PHP JAVA TCLSH PATH_SEP EXEEXT


