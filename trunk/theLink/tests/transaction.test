## init
##

set BLOCK_1 true
#set BLOCK_1 false
set BLOCK_2 true
#set BLOCK_2 false

#set tcl_traceExec 1

proc CB_I {ctx} {
  global RET
  $ctx ReadT_START
  lappend RET [$ctx ReadI]
  $ctx ReadT_END
  lappend RET [$ctx ReadI]
}

proc ECOI {ctx} {
  $ctx SendSTART
  $ctx SendI [$ctx ReadI]
  $ctx SendRETURN
}

[tclmsgque FactoryGet] Copy OTTO

